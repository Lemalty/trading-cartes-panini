
PORT=3000
NODE_ENV=dev
DB_TYPE=sqlite
DB_HOST=
DB_USER=
DB_PASSWORD=
DB_NAME=

ADMIN_PASSWORD=test

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-access-token-at-least-32-characters-long
JWT_REFRESH_SECRET=your-super-secret-refresh-token-at-least-32-characters-long-and-different
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@example.com

# Registration Settings
REQUIRE_EMAIL_VERIFICATION=true
ALLOW_PUBLIC_REGISTRATION=true
MIN_PASSWORD_LENGTH=8

# Rate Limiting (for Phase 3)
RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_LOGIN_WINDOW=900000
RATE_LIMIT_REGISTER_MAX=3
RATE_LIMIT_REGISTER_WINDOW=3600000
RATE_LIMIT_FORGOT_PASSWORD_MAX=3
RATE_LIMIT_FORGOT_PASSWORD_WINDOW=3600000

# Frontend URLs
FRONTEND_URL=http://localhost:3000
EMAIL_VERIFICATION_PATH=/verify-email
PASSWORD_RESET_PATH=/reset-password