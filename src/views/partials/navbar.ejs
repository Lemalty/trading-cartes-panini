<nav class="glass-card rounded-2xl p-4 mb-8">
    <div class="flex items-center justify-between">
        <a href="/" class="text-lg sm:text-xl font-bold <%= currentPage === 'home' ? 'text-sky-400' : 'text-white hover:text-sky-300' %> transition-colors truncate mr-4">
            Echange Cartes 3SLHB
        </a>

        <!-- Desktop nav -->
        <div class="hidden md:flex items-center gap-3">
            <a href="/" class="px-4 py-2 <%= currentPage === 'home' ? 'bg-sky-500/20 text-sky-400' : 'text-slate-300 hover:text-white' %> rounded-lg transition-all text-sm">
                Accueil
            </a>
            <% if (typeof memberName !== 'undefined' && memberName) { %>
                <a href="/my-cards" class="px-4 py-2 <%= currentPage === 'my-cards' ? 'bg-sky-500/20 text-sky-400' : 'text-slate-300 hover:text-white' %> rounded-lg transition-all text-sm">
                    Mes cartes
                </a>
                <div class="flex items-center gap-2 ml-2">
                    <span class="text-sky-400 text-sm font-semibold"><%= memberName %></span>
                    <a href="/logout" class="px-3 py-1.5 bg-red-500/20 text-red-400 hover:bg-red-500/30 rounded-lg transition-all text-sm">
                        Deconnexion
                    </a>
                </div>
            <% } else { %>
                <a href="/register" class="px-4 py-2 text-slate-300 hover:text-white rounded-lg transition-all text-sm">
                    S'inscrire
                </a>
                <a href="/login" class="px-4 py-2 bg-gradient-to-r from-sky-500 to-sky-600 hover:from-sky-600 hover:to-sky-700 text-white font-semibold rounded-lg transition-all shadow-lg hover:shadow-sky-500/30 text-sm">
                    Connexion
                </a>
            <% } %>
        </div>

        <!-- Mobile hamburger -->
        <button id="navToggle" class="md:hidden p-2 text-slate-300 hover:text-white transition-colors" aria-label="Menu">
            <svg id="navIconOpen" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
            <svg id="navIconClose" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>
    </div>

    <!-- Mobile menu -->
    <div id="navMobile" class="hidden md:hidden mt-4 pt-4 border-t border-white/10">
        <div class="flex flex-col gap-2">
            <a href="/" class="px-4 py-2.5 <%= currentPage === 'home' ? 'bg-sky-500/20 text-sky-400' : 'text-slate-300 hover:text-white' %> rounded-lg transition-all text-sm">
                Accueil
            </a>
            <% if (typeof memberName !== 'undefined' && memberName) { %>
                <a href="/my-cards" class="px-4 py-2.5 <%= currentPage === 'my-cards' ? 'bg-sky-500/20 text-sky-400' : 'text-slate-300 hover:text-white' %> rounded-lg transition-all text-sm">
                    Mes cartes
                </a>
                <div class="flex items-center justify-between px-4 py-2.5">
                    <span class="text-sky-400 text-sm font-semibold"><%= memberName %></span>
                    <a href="/logout" class="px-3 py-1.5 bg-red-500/20 text-red-400 hover:bg-red-500/30 rounded-lg transition-all text-sm">
                        Deconnexion
                    </a>
                </div>
            <% } else { %>
                <a href="/register" class="px-4 py-2.5 text-slate-300 hover:text-white rounded-lg transition-all text-sm">
                    S'inscrire
                </a>
                <a href="/login" class="px-4 py-2.5 bg-gradient-to-r from-sky-500 to-sky-600 text-white font-semibold rounded-lg text-sm text-center">
                    Connexion
                </a>
            <% } %>
        </div>
    </div>
</nav>

<script>
    (function() {
        const toggle = document.getElementById('navToggle');
        const menu = document.getElementById('navMobile');
        const iconOpen = document.getElementById('navIconOpen');
        const iconClose = document.getElementById('navIconClose');
        if (toggle && menu) {
            toggle.addEventListener('click', function() {
                menu.classList.toggle('hidden');
                iconOpen.classList.toggle('hidden');
                iconClose.classList.toggle('hidden');
            });
        }
    })();
</script>
